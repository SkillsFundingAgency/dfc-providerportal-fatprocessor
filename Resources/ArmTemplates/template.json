{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appPrefix": {
      "type": "string",
      "metadata": {
        "description": "Prefix for the resources, in the form dfc-env-proj-fnapp"
      }
    },
    "appServicePlanName": {
      "type": "string",
      "metadata": {
        "description": "App service plan to run the function app under"
      }
    },
    "appServicePlanResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Resource group the app service plan is in"
      }
    },
    "storageConnectionString": {
      "type": "securestring",
      "metadata": {
        "description": "Connection string for the storage account to store function app files"
      }
    }
  },
  "variables": {
    "deploymentUrlBase": "https://raw.githubusercontent.com/SkillsFundingAgency/dfc-devops/master/ArmTemplates/",
    "functionAppName": "[concat(parameters('appPrefix'),'-fa')]",
    "functionAppInsightName": "[concat(variables('functionAppName'),'-ai')]",
    "publicApiAppName": "[concat(parameters('appPrefix'),'-as')]",
    "publicApiAppInsightName": "[concat(variables('publicApiAppName'),'-ai')]"
  },
  "resources": [
    {
      "apiVersion": "2017-05-10",
      "name": "ppFatProcFuncAppInsights",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'application-insights.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "appInsightsName": {
            "value": "[variables('functionAppInsightName')]"
          },
          "attachedService": {
            "value": "[variables('functionAppName')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "ppFatProcPublicApiAppInsights",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'application-insights.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "appInsightsName": {
            "value": "[variables('publicApiAppInsightName')]"
          },
          "attachedService": {
            "value": "[variables('functionAppName')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "ppFatProcFunctionAppService",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "ppFatProcFuncAppInsights"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'app-service.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "appServiceName": {
            "value": "[variables('functionAppName')]"
          },
          "appServicePlanName": {
            "value": "[parameters('appServicePlanName')]"
          },
          "appServicePlanResourceGroup": {
            "value": "[parameters('appServicePlanResourceGroup')]"
          },
          "appServiceType": {
            "value": "functionapp"
          },
          "appServiceAppSettings": {
            "value": [
              {
                "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                "value": "[reference('ppFatProcFuncAppInsights').outputs.InstrumentationKey.value]"
              },
              {
                "name": "AzureWebJobsStorage",
                "value": "[parameters('storageConnectionString')]"
              },
              {
                "name": "FUNCTIONS_EXTENSION_VERSION",
                "value": "~3"
              },
              {
                "name": "MSDEPLOY_RENAME_LOCKED_FILES",
                "value": "1"
              },
              {
                "name": "WEBSITE_RUN_FROM_PACKAGE",
                "value": "1"
              }
            ]
          },
          "deployStagingSlot": {
            "value": false
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "ppFatProcPublicApiAppService",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "ppFatProcPublicApiAppInsights"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'app-service.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "appServiceName": {
            "value": "[variables('publicApiAppName')]"
          },
          "appServicePlanName": {
            "value": "[parameters('appServicePlanName')]"
          },
          "appServicePlanResourceGroup": {
            "value": "[parameters('appServicePlanResourceGroup')]"
          },
          "appServiceType": {
            "value": "app"
          },
          "appServiceAppSettings": {
            "value": [
              {
                "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                "value": "[reference('ppFatProcPublicApiAppInsights').outputs.InstrumentationKey.value]"
              },
              {
                "name": "MSDEPLOY_RENAME_LOCKED_FILES",
                "value": "1"
              },
              {
                "name": "WEBSITE_RUN_FROM_PACKAGE",
                "value": "1"
              }
            ]
          },
          "deployStagingSlot": {
            "value": false
          }
        }
      }
    }
  ],
  "outputs": {
  }
}