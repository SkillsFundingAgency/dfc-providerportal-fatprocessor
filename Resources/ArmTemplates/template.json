{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appPrefix": {
      "type": "string",
      "metadata": {
        "description": "Prefix for the resources, in the form dfc-env-proj-fnapp"
      }
    },
    "appServicePlanName": {
      "type": "string",
      "metadata": {
        "description": "App service plan to run the function app under"
      }
    },
    "appServicePlanResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Resource group the app service plan is in"
      }
    },
    "storageConnectionString": {
      "type": "securestring",
      "metadata": {
        "description": "Connection string for the storage account to store function app files"
      }
    },
    "serviceBusAccountName": {
      "type": "string",
      "metadata": {
        "description": "Name of the service bus namespace used by this app"
      }
    },
    "cosmosDbAccountName": {
      "type": "string",
      "metadata": {
        "description": "Name of the cosmos db account by this app"
      }
    },
    "sharedResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "The name of the shared resource group for this project"
      }
    },
    "cosmosDbDatabaseName": {
      "type": "string",
      "metadata": {
        "description": "The name of the cosmos db database used by this project"
      }
    }
  },
  "variables": {
    "deploymentUrlBase": "https://raw.githubusercontent.com/SkillsFundingAgency/dfc-devops/master/ArmTemplates/",
    "functionAppName": "[concat(parameters('appPrefix'),'-fa')]",
    "functionAppInsightName": "[concat(variables('functionAppName'),'-ai')]",
    "publicApiAppName": "[concat(parameters('appPrefix'),'-as')]",
    "publicApiAppInsightName": "[concat(variables('publicApiAppName'),'-ai')]",
    "serviceBusQueueName": "fat-processor",
    "serviceBusSasTokenName": "monitor-fat-processor"
  },
  "resources": [
    {
      "apiVersion": "2017-05-10",
      "name": "ppFatProcFuncAppInsights",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'application-insights.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "appInsightsName": {
            "value": "[variables('functionAppInsightName')]"
          },
          "attachedService": {
            "value": "[variables('functionAppName')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "ppFatProcPublicApiAppInsights",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'application-insights.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "appInsightsName": {
            "value": "[variables('publicApiAppInsightName')]"
          },
          "attachedService": {
            "value": "[variables('functionAppName')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "ppFatProcFunctionAppService",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "ppFatProcFuncAppInsights"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'app-service.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "appServiceName": {
            "value": "[variables('functionAppName')]"
          },
          "appServicePlanName": {
            "value": "[parameters('appServicePlanName')]"
          },
          "appServicePlanResourceGroup": {
            "value": "[parameters('appServicePlanResourceGroup')]"
          },
          "appServiceType": {
            "value": "functionapp"
          },
          "appServiceAppSettings": {
            "value": [
              {
                "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                "value": "[reference('ppFatProcFuncAppInsights').outputs.InstrumentationKey.value]"
              },
              {
                "name": "AzureWebJobsStorage",
                "value": "[parameters('storageConnectionString')]"
              },
              {
                "name": "FUNCTIONS_EXTENSION_VERSION",
                "value": "~3"
              },
              {
                "name": "MSDEPLOY_RENAME_LOCKED_FILES",
                "value": "1"
              },
              {
                "name": "WEBSITE_RUN_FROM_PACKAGE",
                "value": "1"
              },
              {
                "name": "FUNCTIONS_WORKER_RUNTIME",
                "value": "dotnet"
              },
              {
                "name": "Apprenticeships_QueueConnection",
                "value": "[listKeys(resourceId(parameters('sharedResourceGroup'), 'Microsoft.ServiceBus/namespaces/queues/authorizationRules', parameters('serviceBusAccountName'), variables('serviceBusQueueName'), variables('serviceBusSasTokenName')), '2017-04-01').primaryConnectionString]"
              },
              {
                "name": "Organisations_QueueConnection",
                "value": "[listKeys(resourceId(parameters('sharedResourceGroup'), 'Microsoft.ServiceBus/namespaces/queues/authorizationRules', parameters('serviceBusAccountName'), variables('serviceBusQueueName'), variables('serviceBusSasTokenName')), '2017-04-01').primaryConnectionString]"
              },
              {
                "name": "Venues_QueueConnection",
                "value": "[listKeys(resourceId(parameters('sharedResourceGroup'), 'Microsoft.ServiceBus/namespaces/queues/authorizationRules', parameters('serviceBusAccountName'), variables('serviceBusQueueName'), variables('serviceBusSasTokenName')), '2017-04-01').primaryConnectionString]"
              },
              {
                "name": "Apprenticeships_CosmosConnection",
                "value": "[listConnectionStrings(resourceId(parameters('sharedResourceGroup'), 'Microsoft.DocumentDB/databaseAccounts', parameters('cosmosDbAccountName')), '2019-12-12').connectionStrings[0].connectionString]"
              },
              {
                "name": "Organisations_CosmosConnection",
                "value": "[listConnectionStrings(resourceId(parameters('sharedResourceGroup'), 'Microsoft.DocumentDB/databaseAccounts', parameters('cosmosDbAccountName')), '2019-12-12').connectionStrings[0].connectionString]"
              },
              {
                "name": "Venues_CosmosConnection",
                "value": "[listConnectionStrings(resourceId(parameters('sharedResourceGroup'), 'Microsoft.DocumentDB/databaseAccounts', parameters('cosmosDbAccountName')), '2019-12-12').connectionStrings[0].connectionString]"
              },
              {
                "name": "Apprenticeships_WatchDatabase",
                "value": "[parameters('cosmosDbDatabaseName')]"
              },
              {
                "name": "Apprenticeships_WatchCollection",
                "value": "apprenticeships"
              },
              {
                "name": "Organisations_WatchDatabase",
                "value": "[parameters('cosmosDbDatabaseName')]"
              },
              {
                "name": "Organisations_WatchCollection",
                "value": "ukrlp"
              },
              {
                "name": "Venues_WatchDatabase",
                "value": "[parameters('cosmosDbDatabaseName')]"
              },
              {
                "name": "Venues_WatchCollection",
                "value": "venues"
              }
            ]
          },
          "deployStagingSlot": {
            "value": true
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "ppFatProcPublicApiAppService",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "ppFatProcPublicApiAppInsights"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'app-service.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "appServiceName": {
            "value": "[variables('publicApiAppName')]"
          },
          "appServicePlanName": {
            "value": "[parameters('appServicePlanName')]"
          },
          "appServicePlanResourceGroup": {
            "value": "[parameters('appServicePlanResourceGroup')]"
          },
          "appServiceType": {
            "value": "app"
          },
          "appServiceAppSettings": {
            "value": [
              {
                "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                "value": "[reference('ppFatProcPublicApiAppInsights').outputs.InstrumentationKey.value]"
              },
              {
                "name": "MSDEPLOY_RENAME_LOCKED_FILES",
                "value": "1"
              },
              {
                "name": "WEBSITE_RUN_FROM_PACKAGE",
                "value": "1"
              }
            ]
          },
          "deployStagingSlot": {
            "value": true
          }
        }
      }
    }
  ],
  "outputs": {
  }
}